<html>
    <head>
        <title>ThaanAquatics | Home</title>
        <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Patrick Hand" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
        <link rel="icon" href="assets/img/favicon/favicon.ico" type="image/x-icon">
        <script src="/assets/js/script.js" defer></script>
        <meta charset="utf-8">
    </head>
    <body>
        <div class="nav">
            <div id="left">
                <a href="/">
                    <img src="/assets/img/logo.png" alt="TA" id="logo">
                </a>
            </div>
            <div id="center"></div>
            <div id="right">
                <div class="search-container">
                    <form action="/search" method="get">
                      <input class="search expandright" id="searchright" type="search" name="q" placeholder="Search">
                      <label class="button searchbutton" for="searchright"><span class="mglass">&#9906;</span></label>
                    </form>
                </div>
                <a href="/account">
                    <img src="/assets/img/account-img.png" alt="Account">
                </a>
                <a href="/cart">
                    <img src="/assets/img/cart-img.png" alt="Cart">
                </a>
            </div>
        </div>

        <div class="container">
            <div class="sidebar">
                    <div class="dropdown">
                        <a>Catfish</a>
                        <div class="dropdown-content">
                            <a href="/products/Corydoras">Corydoras</a>
                            <a href="/products/Plecostomus">Plecostomus</a>
                        </div>
                    </div>
                    <a href="/products/Livebearers">Guppies</a>
                    <a href="/products/Livebearers">Mollies</a>
                    <a href="/products/Bettas">Bettas</a>
                    <a href="/products/Feeders and Inverts">Feeders</a>
                    <a href="/products/Plants">Plants</a>
            </div>
            
            <div class="gallery">
                <div class="breadcrumbs">
                    <a href="/">Home</a> > <a href="/products/<%= currentCategory %>"><%= currentCategory %></a>
                    <p><%= currentCategory %></p>
                </div>
                <div class="items-grid">
                    <% items.forEach(item => { %>
                        <div class="item-card">
                            <img src="<%= item.photoPath %>" alt="<%= item.Name %>" class="item-image"> <!-- assuming you have an image URL for each item -->
                            <h3><%= item.Name %></h3>
                            <p><strong>Category:</strong> <%= item.Category %></p>
                            <!-- You can add more details like price, description, etc. here -->
                        </div>
                    <% }); %>
                </div>
                
            </div>
        </div>
    </body>
</html>